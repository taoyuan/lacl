{
	"name": "AclRole",
	"plural": "aclroles",
	"base": "PersistedModel",
	"properties": {
		"id": {
			"type": "string",
			"id": true,
			"generated": false
		},
		"name": {
			"type": "string",
			"required": true
		},
		"description": "string",
		"scopeType": {
			"type": "string",
			"index": true
		},
		"scopeId": {
			"type": "string",
			"index": true
		}
	},
